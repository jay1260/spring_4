<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.it.gb4.member.memberUser.MemberUserDAO">
	<select id="getMemberLogin" parameterType="MemberDTO" resultType="MemberUserDTO">
		select * from member_lgb where id=#{id} and pw=#{pw}
	</select>
	
	<update id="setMemberUpdate" parameterType="MemberDTO">
		update member_lgb set name=#{name}, email=#{email} where id=#{id}
	</update>
</mapper>