<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.it.gb4.board.notice.NoticeDAO">
	<!-- 데이터 수정 -->
	<update id="setUpdate" parameterType="NoticeDTO">
		update notice set title=#{title}, contents=#{contents} where num = #{num}
	</update>

	<!-- 데이터 삭제 -->
	<delete id="setDelete" parameterType="NoticeDTO">
		delete notice where num = #{num}
	</delete>
	
	<!-- 데이터 추가 -->
	<insert id="setInsert" parameterType="NoticeDTO">
		insert into notice values(notice_seq.nextval,#{title},#{writer},#{contents},sysdate,0)
	</insert>
	
	<!-- 전체 데이터 보기 -->
	<select id="getList" resultType="NoticeDTO" parameterType="Pager">
		select * from
		(select rownum R, N.* from
		(select * from notice where
		<choose>
			<when test="kind == 'tt'">
				title
			</when>
			<when test="kind == 'wr'">
				writer
			</when>
			<otherwise>
				contents
			</otherwise>
		</choose> 
		like '%'||#{search}||'%' order by num desc) N)
		where R between #{startRow} and #{lastRow}
	</select>
	
	<select id="getCount" resultType="Long" parameterType="Pager">
		select count(num) from notice where
		<choose>
			<when test="kind=='tt'">
				title
			</when>
			<when test="kind=='wr'">
				writer
			</when>
			<otherwise>
				contents
			</otherwise>
		</choose>
		like '%'||#{search}||'%'
	</select>
	
	
	<!-- getOne 테스트해본 것 -->
	<resultMap type="NoticeDTO" id="getOneResult">
		<!-- primary key는 id로 지정 -->
		<id column="n" property="num"/>
		<!-- 그외 나머지는 result로 지정 -->
		<result column="t" property="title"/>
		<result column="writer" property="writer"/>
		<result column="contents" property="contents"/>
	</resultMap>
	
	<!-- 하나의 데이터 보기 -->
	<select id="getOne" parameterType="NoticeDTO" resultType="NoticeDTO" resultMap="getOneResult">
		select num as n, title as t, writer,contents from notice where num = #{num}
		<!-- DAO에서 선언한 변수명과 일치시켜 입력해준다. -->
	</select>
</mapper>